{
  "name": "@techbasejs/simm-player",
  "version": "1.0.0",
  "description": "Missing ECMAScript module utils for Node.js",
  "repository": "techbasejs/techbasejs",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "main": "./cjs/index.cjs",
  "module": "./esm/index.mjs",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/index.d.mts",
        "default": "./esm/index.mjs"
      },
      "require": {
        "types": "./lib/index.d.ts",
        "default": "./cjs/index.cjs"
      }
    }
  },
  "dependencies": {
    "rollup": "^4.18.0",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@types/node": "20.14.9",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.7",
    "rollup-plugin-banner2": "^1.3.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-preserve-directives": "^0.4.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm --filter @simm-player/core build && pnpm --filter @simm-player/react build && pnpm --filter @simm-player/vue build"
  }
}