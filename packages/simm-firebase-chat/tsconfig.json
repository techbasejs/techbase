{
  "exclude": ["./lib", "./esm", "./cjs"],
  "compilerOptions": {
    "rootDir": ".",
    "declaration": true,
    "declarationDir": "lib",
    "types": ["node"],
    "target": "ES2015",
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext", "dom.iterable"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "composite": true,
    "experimentalDecorators": true
  }
}
